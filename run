

cids=()
function run_sub_task() {

    cargo run &
    cids[${#cids[*]}]=$!

    cd ./crates/web && npm run dev &
    cids[${#cids[*]}]=$!

}

function handle_event() {
    trap 'onCtrlC' INT
    function onCtrlC () {
        for i in ${cids[@]}
        do
            kill $i
        done
    }

}

run_sub_task
handle_event

wait
